@model SalesFood.ViewModels.OrderFoodViewModel

@{
    ViewData["Title"] = "Order Foods";
    decimal totalOrder = 0;
}

<h1>Order Foods</h1>
<hr />

<h3>Order : @Html.DisplayFor(model => Model.Order.OrderId)</h3>
<h3>Customer : @Html.DisplayFor(model => Model.Order.Name)</h3>
<h3>Data : @Html.DisplayFor(model => Model.Order.OrderDate)</h3>
<h3>Delivered on : @Html.DisplayFor(model => Model.Order.DeliveryDate)</h3>

<table class="table">
    @foreach (var item in Model.Order.OrderItems)
    {
        totalOrder += (item.Food.Price * item.Quantity);

        <tr>
            <td align="right">
                <h3>@Html.DisplayFor(modelItem => item.Food.Name)</h3>
            </td>
            <td align="right">
                <img src="@item.Food.ImageUrl" class="img-fluid" height="100" width="100" />
            </td>
            <td align="right">
                <h3>@string.Format("{0:C}", item.Food.Price)</h3>
            </td>
            <td align="right">
                <h3>(@Html.DisplayFor(modelItem => item.Quantity))</h3>
            </td>
        </tr>
    }
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h3>Total Order : @string.Format("{0:C}", totalOrder)</h3>
        </td>
    </tr>
</table>
<a asp-action="Index" class="btn btn-outline-info">Back</a>