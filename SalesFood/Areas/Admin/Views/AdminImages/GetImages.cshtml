@model FileManagerModel
@{
    ViewBag.Title = "Files";
}

@if (Model.Files != null)
{
    <h3>Images:</h3>
    <hr />
    var path = Model.PathImagesProduct;
    <div class="row">
        @foreach (FileInfo file in Model.Files)
        {
            <div class="column">
                <img src="~/@path/@file.Name" width="125" height="125" title="@file.Name" asp-append-version="true">
                <div style="padding:10px;text-align:left">
                    <a href="@Url.Action("DeleteFile","AdminImages",new { fileName=file.Name})">Delete</a>
                </div>
            </div>
        }
    </div>
}
@if (ViewData["Error"] != null)
{
    <img src="~/images/erro1.png" width="150" height="150" />
    <h4>@ViewData["Error"]</h4>
}
<div class="clearfix"></div>
<hr />
<div>
    <span>To see the file name, hover over the image</span>
</div>
<div class="form-group">
    <a class="btn btn-outline-info" asp-controller="AdminImages" asp-action="Index">Back</a>
</div>