<br />
<h4><strong>Manage Images</strong></h4>
<br />
<table border="0" width="100%">
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="UploadFiles">
                <img src="~/images/upload2.png" width="200" height="150" alt="Upload Files" />
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Select one or more files to upload:</b></p>
                        <p>(Files with the same name will be overwritten)</p>
                        <input type="file" name="files" multiple class="btn btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Upload File(s)" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" asp-action="GetImages">
                <img src="~/images/visualizar1.jpg" width="200" height="200" alt="Upload Files" />
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>View images in the server folder :</strong></p>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="View Files in the server" class="btn btn-outline-danger" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if (ViewData["Deleted"] != null)
    {
        <li>@ViewData["Deleted"]</li>
    }
</div>