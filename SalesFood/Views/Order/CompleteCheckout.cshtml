@model Order

<div class="container mt-1">
    <div class="jumbotron">
        <h2>@ViewBag.CompleteCheckoutMessage</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Customer: <strong>@Model.Name</strong></p>
            <p>Order Date: <strong>@Model.OrderDate</strong></p>
            <p>Order Number: <strong>@Model.OrderId</strong></p>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantity</th>
                    <th>Product</th>
                    <th>Price</th>
                </tr>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td><img src="@item.Food.ImageUrl" width="40" height="40" /></td>
                        <td>@item.Quantity</td>
                        <td>@item.Food.Name</td>
                        <td>@item.Food.Price</td>
                    </tr>
                }
            </table>
            <h4>Order Total Value: <strong>@(((decimal)ViewBag.TotalOrder).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align:center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return</a>
    </h3>
</div>
